---
import Badge from '@/components/Badge.astro';
import SocialPill from '@/components/SocialPill.astro';
import GitHubIcon from '@/components/icons/Github.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import Mail from './icons/mail.astro';
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      src="/me.jpg"
      alt="Jhon profile photo"
      class="rounded-full shadow-lg size-16 object-cover"
    />
    <a
      href="https://www.linkedin.com/in/jhon-stiven-7479062a6/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge> Disponible para trabajar</Badge></a
    >
  </div>
  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
    Hey, soy Jhon
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +5 años de experiencia. <strong>Ingeniero de Software</strong> de Bogota, Colombia. Especializado
    en el desarrollo de aplicaciones web únicas.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:tivenorjuela7@gmail.com">
      <Mail class="size-4" />
      Contactame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/jhon-stiven-7479062a6/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
