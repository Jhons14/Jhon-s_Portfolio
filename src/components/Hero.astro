---
import Badge from '@/components/Badge.astro';
import SocialPill from '@/components/SocialPill.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import Mail from '@/components/icons/Mail.astro';

const lang = Astro.params.lang;

const status = lang === 'es' ? 'Disponible para trabajar' : 'Available to work';
const title = lang === 'es' ? 'Hola, soy Jhon' : "Hi, I\'m Jhon";
const description = {
  preStrong:
    lang === 'es' ? '+5 años de experiencia.' : '+5 years of experience.',
  strong: lang === 'es' ? 'Ingeniero de Software' : 'Software Engineer',
  posStrong:
    lang === 'es'
      ? 'de Bogota, Colombia. Especializado en el desarrollo de aplicaciones web únicas.'
      : 'from Bogotá, Colombia. Specialized in developing unique web applications.',
};
---

<div
  class='flex flex-col max-w-xl sm:items-baseline items-center mx-auto sm:text-start text-center'
>
  <div class='flex gap-4 mb-7'>
    <img
      src='/me.jpg'
      alt='Jhon profile photo'
      class='rounded-full shadow-lg size-16 object-cover'
    />
    <a
      href='https://www.linkedin.com/in/jhon-stiven-7479062a6/'
      target='_blank'
      rel='noopener'
      class='flex items-center transition md:justify-center md:hover:scale-105'
    >
      <Badge>{status}</Badge></a
    >
  </div>
  <h1
    class='text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white'
  >
    {title}
  </h1>
  <p
    class='mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300'
  >
    {description.preStrong}
    <strong>{description.strong}</strong>
    {description.posStrong}
  </p>
  <nav class='flex flex-wrap gap-4 mt-8'>
    <SocialPill href='mailto:tivenorjuela7@gmail.com'>
      <Mail class='size-4' />
      {lang === 'es' ? 'Contactame' : 'Contact me'}
    </SocialPill>
    <SocialPill href='https://www.linkedin.com/in/jhon-stiven-7479062a6/'>
      <LinkedInIcon class='size-4' />
      LinkedIn
    </SocialPill>
  </nav>
</div>
