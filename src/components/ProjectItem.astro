---
import Github from './icons/Github.astro';

const { title, src, href, description, tags, githubRef } = Astro.props;
---

<div
  class='sm:grid sm:grid-cols-2 sm:gap-12 flex flex-col justify-center gap-4 items-center'
>
  <a
    href={href}
    target='_blank'
    class='flex object-cover rounded-lg h-fit border-yellow-700/40 dark:border-white/40 border-2 w-full overflow-hidden hover:border-collapse hover:border-2 hover:border-yellow-600'
  >
    <video
      autoplay
      loop
      muted
      playsinline
      src={src}
      class='rounded-lg max-w-full h-auto block hover:scale-100 scale-125 transition-all transform duration-500'
    ></video>
  </a>
  <div
    class='flex flex-col sm:gap-2 h-full justify-center items-center gap-1 text-center'
  >
    <h3 class='font-bold sm:text-2xl text-sm dark:text-white'>
      {title}
    </h3>
    <p class='dark:text-gray-400 sm:text-base text-xs'>
      {description}
    </p>

    <div class='flex justify-between gap-4 items-center w-full'>
      <ul
        class='flex flex-row flex-wrap my-2 mx-2 gap-x-2 gap-y-3 justify-center'
      >
        {
          tags.map((tag: any) => (
            <li>
              <span
                class={`flex gap-x-1 items-center rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class='size-4' />
                {tag.name}
              </span>
            </li>
          ))
        }
      </ul>
      <div class='flex justify-center'>
        <a
          href={githubRef}
          target='_blank'
          class='flex flex-col items-center justify-center w-min group'
        >
          <Github
            class='group-hover:text-blue-500 text-black md:text-xl md:size-10 dark:text-gray-400'
          />
          <span class='group-hover:text-blue-500 dark:text-gray-400'>Code</span>
        </a>
      </div>
    </div>
  </div>
</div>
