---
import LinkInLine from '@/components/LinkInline.astro';

const { date, title, company, description, link } = Astro.props;
---

<li class="mb-16 ms-6">
  <div
    class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900"
  >
    <svg
      class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
      ></path>
    </svg>
  </div>
  <div class="grid grid-cols-2 w-full gap-4 items-center justify-center">
    <div class="flex flex-col gap-4 items-center my-2 text-center justify-center px-8">
      <h3
        class="items-centerinset-1 gap-8 sm:text-2xl text-sm font-semibold text-gray-900 dark:text-blue-500"
      >
        {title}
      </h3>
      <span class="text-xl font-normal leading-none text-gray-400 dark:text-gray-500">
        {company}
      </span>
      <time
        class="w-fit bg-blue-100 text-blue-800 md:text-sm text-xs font-medium  px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 "
        >{date}
      </time>
      {link && <LinkInLine href={link}> Saber mas... </LinkInLine>}
    </div>
    <p class="flex items-center justify-center sm:text-base text-xs font-normal text-gray-500 dark:text-gray-400">
      {description}
    </p>
  </div>
</li>
