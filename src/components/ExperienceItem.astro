---
import LinkInLine from '@/components/LinkInline.astro';

const { date, title, company, description, link } = Astro.props;
---

<li class="relative ms-6">
  <div
  class="absolute lg:size-18 size-6 lg:-start-12 -start-9 top-[25%] flex items-center justify-center lg:size-10 sm:size-6 bg-blue-100 rounded-full ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900"
  >
    <svg
      class="lg:w-5 w-2.5 text-blue-800 dark:text-blue-300"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
      ></path>
    </svg>
  </div>
  <div class="grid grid-cols-2 w-full gap-4 items-center">
    <div class="flex flex-col gap-2 my-2 justify-center sm:px-8 px-1">
      <h3
        class=" gap-8 sm:text-2xl text-sm font-semibold text-yellow-500 dark:text-blue-500"
      >
        {title}
      </h3>
      <span class="sm:text-xl text-xs font-normal leading-none text-gray-700 dark:text-gray-500">
        {company}
      </span>
      <time
        class="w-fit bg-blue-100 text-blue-800 sm:text-sm text-xs sm:font-medium font-thin sm:px-2.5 sm:py-0.5 px-1 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 "
        >{date}
      </time>
    </div>
    <div>
    <p class="flex items-center justify-center sm:text-base text-xs font-normal text-gray-500 dark:text-gray-400 mb-4">
      {description}
    </p>
    {link && <LinkInLine href={link}> Saber mas... </LinkInLine>}
    </div>
  </div>
</li>
